{
  "compilerOptions": {
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "declaration": true, // 是否生成声明文件
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@zh/zh-core": ["node_modules/@zh/zh-core/src"],
      "@zh/zh-design": ["node_modules/@zh/zh-design/src"],
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib", "es", "dist", "typings", "**/__test__", "test", "docs", "tests"]
}
